{% trans_default_domain 'FOSUserBundle' %}

<div class="panel panel-default panel-profile text-left">
	<div class="panel-heading">
		<h3 class="panel-title">{{ 'layout.profile'|trans }}</h3>	
	</div>
	<div class="panel-body">
		{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-profile' } }) }}
		    {{ form_widget(form) }}
		    <div class="form-group">
		    	<a href="{{ path('fos_user_change_password') }}">{{ 'change_password.submit'|trans }}</a>
		    </div>
		    <div class="text-right btns">
		    	<input id="cancelBtn" class="btn btn-danger" type="button" value="{{ 'form.cancel'|trans }}" />
		        <input class="btn btn-success" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
		    </div>
		{{ form_end(form) }}
	</div>
</div>

<script>
	$(document).ready(function() {
		$('#cancelBtn').bind('click', function() {
			window.location.href = '{{ path('fos_user_profile_show') }}';
		});
	});
</script>